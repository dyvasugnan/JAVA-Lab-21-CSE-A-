import java.util.*;
class StringMerge {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String s1=sc.next();
        String s2=sc.next();
        String s3="";
        int m=s1.length();
        int n=s2.length(),i;
        for(i=0;i<m||i<n;i++){
            if(i<m)
            s3+=s1.charAt(i);
            if(i<n)
            s3+=s2.charAt(i);
        }
        System.out.print(s3+"\n");
    }
}
